<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/op_secondary">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/op_surface" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/op_grid_border" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</ripple>
