<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OceanProfessional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/op_primary</item>
        <item name="android:navigationBarColor">@color/op_background</item>
        <item name="colorPrimary">@color/op_primary</item>
        <item name="colorSecondary">@color/op_secondary</item>
        <item name="android:colorBackground">@color/op_background</item>
        <item name="android:textColorPrimary">@color/op_text</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="materialButtonStyle">@style/Widget.OceanProfessional.Button</item>
        <item name="cardViewStyle">@style/Widget.OceanProfessional.Card</item>
    </style>

    <style name="Widget.OceanProfessional.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/op_surface</item>
        <item name="backgroundTint">@color/op_primary</item>
        <item name="rippleColor">@color/op_secondary</item>
    </style>

    <style name="Widget.OceanProfessional.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/op_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TextAppearance.OceanProfessional.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/op_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.OceanProfessional.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/op_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
